@page
@model EnrolmentSystem.Pages.EditModel
@{
}
<div class="container">
    <h1>Update Student Information</h1>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="Student.StudentId" />
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" asp-for="Student.Name" />
        </div>
        <div class="form-group">
            <label>Age</label>
            <input class="form-control" asp-for="Student.Age" />
        </div>
        <div class="form-group">
            <label>Address</label>
            <input class="form-control" asp-for="Student.Address" />
        </div>
        <button class="btn btn-primary btn-block" type="submit">Update</button>
    </form>
</div>