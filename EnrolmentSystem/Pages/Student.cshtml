@page
@model EnrolmentSystem.Pages.StudentModel
@{
}

<div class="container">
        <h1>Student Registration</h1>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" asp-for="Student.Name" />
            </div>
            <div class="form-group">
                <label>Age</label>
                <input class="form-control" asp-for="Student.Age" />
            </div>
            <div class="form-group">
                <label>Address</label>
                <input class="form-control" asp-for="Student.Address"/>
            </div>
            <button class="btn btn-primary btn-block" type="submit">Save</button>
        </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Address</td>
                <td><a asp-page="Edit" asp-route-id="@student.StudentId">Edit</a> | <a asp-page="Student" asp-page-handler="Delete" asp-route-id="@student.StudentId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>